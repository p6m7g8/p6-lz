#!/bin/sh

# shellcheck shell=bash

######################################################################
#<
#
# Function: p6_lz_main()
#
#  Environment:	 LC_ALL OPTIND SHELL TERM
#>
#/ Synopsis
#/    The entry point for bin/p6lzctl
#/
######################################################################
p6_lz_main() {

  # sanitize env
  LC_ALL=C
  unset SHELL
  unset TERM

  # load p6 framework
  local file=".deps/p6common/lib/_bootstrap.sh"
  . $file
  p6_bootstrap ".deps/p6common"
  p6_bootstrap ".deps/p6aws"

  # default options
  local flag_debug=0

  # parse options
  local flag
  while getopts "dD" flag; do
    case $flag in
    D) flag_debug=0 ;;
    d) flag_debug=1 ;;
    *) p6_lz_usage 1 "invalid flag" ;;
    esac
  done
  shift $((OPTIND - 1))

  # grab command
  local cmd="$1"
  shift 1

  # security 101: only allow valid comamnds
  case $cmd in
  boostrap) ;;
  build) ;;
  debug) ;;
  deploy) ;;
  destroy) ;;
  diff) ;;
  install) ;;
  list) ;;
  stacks) ;;
  esac

  # setup -x based on flag_debug
  [ ${flag_debug} = 1 ] && set -x
  # exit if any cli errors w/ >0 return code
  # the commands can still disable locally if needed
  set -e
  p6_lz_cmd_"${cmd}" "$@"
  set +e
  [ ${flag_debug} = 1 ] && set +x

  return 0
}

######################################################################
#<
#
# Function: p6_lz_cmd_debug()
#
#>
######################################################################
p6_lz_cmd_debug() {

  eval "$@"
}

######################################################################
#<
#
# Function: p6_lz_cmd_install()
#
#>
######################################################################
p6_lz_cmd_install() {

  p6_lz_run_install

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_list()
#
#>
######################################################################
p6_lz_cmd_list() {

  p6_lz_run_list

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_stacks()
#
#>
######################################################################
p6_lz_cmd_stacks() {

  local account_ids=$(jq -r '.Accounts[] | select(.Name != "managementAccount") | .AccountId' cdk.context.json)
  local account_id
  for account_id in $account_ids; do
    local account_name=$(p6_aws_svc_organizations_account_name_from_account_id $account_id)
    p6_h3 "$account_name"
    p6_aws_svc_organizations_sts_su $account_name
    p6_aws_svc_cloudformation_stacks_list | grep -E 'p6-lz-' | sort -k 1,1 -n
    p6_aws_svc_organizations_sts_su_un
    p6_msg
  done

  local management_account_id=$(jq -r '.Accounts[] | select(.Name == "managementAccount") | .AccountId' cdk.context.json)
  local account_name=$(p6_aws_svc_organizations_account_name_from_account_id $management_account_id)
  p6_h3 "$account_name"
  p6_aws_svc_cloudformation_stacks_list | grep -E 'p6-lz-' | sort -k 1,1 -n

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_build()
#
#>
######################################################################
p6_lz_cmd_build() {

  p6_lz_run_build

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_bootstrap()
#
#>
######################################################################
p6_lz_cmd_bootstrap() {

  p6_lz_run_bootstrap

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_deploy()
#
#>
######################################################################
p6_lz_cmd_deploy() {

  p6_lz_run_build
  p6_lz_run "deploy"

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_diff()
#
#>
######################################################################
p6_lz_cmd_diff() {

  p6_lz_run "diff"

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_cmd_destroy()
#
#>
######################################################################
p6_lz_cmd_destroy() {

  p6_h2 "Destroying"
  pnpm cdk destroy --all --force

  p6_h3 "Cleaning"
  local account_ids=$(jq -r '.Accounts[] | select(.Name != "managementAccount") | .AccountId' cdk.context.json)
  local account_id
  for account_id in $account_ids; do
    local account_name=$(p6_aws_svc_organizations_account_name_from_account_id $account_id)
    p6_h4 "$account_name"
    p6_aws_svc_organizations_sts_su $account_name
    p6_aws_svc_organizations_sts_su_un
  done

  p6_h3 "Reset Context"
  rm -f cdk.context.json

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_install()
#
#>
######################################################################
p6_lz_run_install() {

  p6_h1 "Installing"
  pnpm install

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_build()
#
#>
######################################################################
p6_lz_run_build() {

  p6_h1 "Building"

  p6_h2 "Linting"
  pnpm eslint .

  p6_h2 "Testing"
  node --trace-deprecation ./node_modules/jest/bin/jest.js --config jest.config.js --coverage

  p6_h2 "Synthing"
  pnpm cdk synth

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_list()
#
#>
######################################################################
p6_lz_run_list() {

  p6_h1 "Listing"
  pnpm cdk ls

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run(action)
#
#  Args:
#	action -
#
#  Environment:	 SCP
#>
######################################################################
p6_lz_run() {
  local action="$1"

  p6_h1 "Running"

  # break glass
  p6_lz_run_bootstrap "$action"

  p6_lz_run_phase_1 "$action"
  p6_lz_run_phase_2 "$action"
  p6_lz_run_phase_3 "$action"
  p6_lz_run_phase_4 "$action"

  # apply Service Control Policies (SCP)

  # operate

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_bootstrap(action)
#
#  Args:
#	action -
#
#  Environment:	 AWS_REGION
#>
######################################################################
p6_lz_run_bootstrap() {
  local action="$1"

  local account_id=$(p6_aws_svc_sts_whoami | jq -r ".Account")
  local region=$AWS_REGION

  p6_h2 "Bootstraping"
  if [ "$action" = "deploy" ]; then
    pnpm cdk bootstrap aws://$account_id/$region
  else
    echo pnpm cdk bootstrap aws://$account_id/$region
  fi
}

######################################################################
#<
#
# Function: p6_lz_run_phase_1(action)
#
#  Args:
#	action -
#
#>
######################################################################
p6_lz_run_phase_1() {
  local action="$1"

  p6_h2 "Phase 1"
  p6_lz_util_cdk_execute $action p6-lz-management-organization
  p6_lz_util_cdk_execute $action p6-lz-management-avm

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_2(action)
#
#  Args:
#	action -
#
#  Environment:	 _2_
#>
######################################################################
p6_lz_run_phase_2() {
  local action="$1"

  p6_h2 "Phase 2"
  p6_lz_run_phase_2_account_context
  p6_lz_run_phase_2_bootstrap_trust "$action"

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_2_bootstrap_trust(action)
#
#  Args:
#	action -
#
#  Environment:	 _2_
#>
######################################################################
p6_lz_run_phase_2_bootstrap_trust() {
  local action="$1"

  p6_h3 "Phase 2: Bootstrap Trust"
  local management_account_id=$(p6_aws_svc_organizations_management_account_id_get)
  local account_ids=$(p6_aws_svc_organizations_accounts_list_active | awk '{print $1}' | grep -v "$management_account_id")
  local account_id
  for account_id in $account_ids; do
    if [ "$action" = "deploy" ]; then
      p6_aws_svc_organizations_sts_su $account_id
      pnpm cdk bootstrap aws://$account_id/us-east-1 \
        --trust $management_account_id \
        --trust-for-lookup $management_account_id \
        --cloudformation-execution-policies arn:aws:iam::aws:policy/AdministratorAccess
      p6_aws_svc_organizations_sts_su_un
    else
      echo pnpm cdk bootstrap aws://$account_id/us-east-1 \
        --trust $management_account_id \
        --trust-for-lookup $management_account_id \
        --cloudformation-execution-policies arn:aws:iam::aws:policy/AdministratorAccess
    fi
  done

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_2_account_context()
#
#  Environment:	 _2_
#>
######################################################################
p6_lz_run_phase_2_account_context() {

  p6_h3 "Phase 2: Account Context"
  local pair
  for pair in $(
    local l
    for l in "$(p6_aws_svc_organizations_accounts_list_active)"; do
      echo "$l" | awk '{print $5 " " $1}' |
        sed -e 's,p6m7g8-,,' -e 's,p6m7g8,management,' -e 's, ,=,'
    done
  ); do
    local name=$(echo "$pair" | cut -d= -f1)
    local account_id=$(echo "$pair" | cut -d= -f2)

    if [ -f cdk.context.json ]; then
      if jq -e '.Accounts' cdk.context.json >/dev/null; then
        if ! jq -e --arg account_id "$account_id" '.Accounts[] | select(.AccountId == $account_id)' cdk.context.json >/dev/null; then
          jq --arg name "$name" --arg account_id "$account_id" \
            '.Accounts += [{"Name": $name, "AccountId": $account_id}]' cdk.context.json >temp.json && mv temp.json cdk.context.json
        fi
      else
        jq --arg name "$name" --arg account_id "$account_id" \
          '. + {Accounts: [{"Name": $name, "AccountId": $account_id}]}' cdk.context.json >temp.json && mv temp.json cdk.context.json
      fi
    else
      echo '{}' | jq --arg name "$name" --arg account_id "$account_id" \
        '. + {Accounts: [{"Name": $name, "AccountId": $account_id}]}' >cdk.context.json
    fi
  done

  jq . cdk.context.json

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3(action)
#
#  Args:
#	action -
#
#  Environment:	 _3_
#>
######################################################################
p6_lz_run_phase_3() {
  local action="$1"

  p6_lz_run_phase_3_management_account "$action"
  p6_lz_run_phase_3_logarchive_account "$action"
  p6_lz_run_phase_3_audit_account "$action"
  p6_lz_run_phase_3_network_account "$action"
  p6_lz_run_phase_3_shared_account "$action"

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3_management_account(action)
#
#  Args:
#	action -
#
#  Environment:	 _3_
#>
######################################################################
p6_lz_run_phase_3_management_account() {
  local action="$1"

  p6_h2 "Phase 3: Management"

  p6_h3 "Phase 3: Management: Delegating CloudTrail"
  local audit_account_id=$(jq -r '.Accounts[] | select(.Name == "audit") | .AccountId' cdk.context.json)
  p6_aws_svc_organization_services_enable cloudtrail.amazonaws.com
  p6_aws_svc_cloudtrail_admin_delegate_register $audit_account_id

  p6_h3 "Phase 3: Management: Delegating SecurityHub"
  p6_aws_svc_securityhub_admin_enable $audit_account_id

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3_logarchive_account(action)
#
#  Args:
#	action -
#
#  Environment:	 _3_
#>
######################################################################
p6_lz_run_phase_3_logarchive_account() {
  local action="$1"

  p6_h2 "Phase 3: Logarchive Stack"
  p6_lz_util_cdk_execute $action p6-lz-logarchive-1

  p6_h3 "Phase 3: Logarchive Add Logarchive Bucket Name to Context"
  p6_aws_svc_organizations_sts_su p6m7g8-logarchive
  local logarchive_bucket_name=$(aws s3 ls | awk '/p6-lz-logarchive-1-p6lzsracentralbucket/ { print $3 }')
  jq --arg k "logarchive-bucket-name" --arg v "$logarchive_bucket_name" '. + {($k): $v}' cdk.context.json >temp.json && mv temp.json cdk.context.json
  p6_aws_svc_organizations_sts_su_un

  p6_lz_util_cdk_execute $action p6-lz-logarchive-2

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3_audit_account(action)
#
#  Args:
#	action -
#
#  Environment:	 _3_
#>
######################################################################
p6_lz_run_phase_3_audit_account() {
  local action="$1"

  p6_h2 "Phase 3: Audit"
  p6_lz_util_cdk_execute $action p6-lz-audit-1

  p6_h3 "Phase 3: Audit: CloudTrail Start Logging"
  p6_aws_svc_organizations_sts_su "p6m7g8-audit"
  local trail_arn=$(p6_aws_svc_cloudtrail_trail_arns) # There is only 1 trail in this account
  p6_aws_svc_cloudtrail_trail_logging_start "$trail_arn"
  p6_aws_svc_organizations_sts_su_un

  p6_lz_util_cdk_execute $action p6-lz-audit-2

  p6_return_void
}

