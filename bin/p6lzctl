p6_lz_run_phase_3() {
  local action="$1"

  p6_lz_run_phase_3_management_account "$action"
  p6_lz_run_phase_3_logarchive_account "$action"
  p6_lz_run_phase_3_audit_account "$action"
  p6_lz_run_phase_3_network_account "$action"
  p6_lz_run_phase_3_shared_account "$action"
  p6_lz_run_phase_3_management_local_account "$action"

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3_management_account(action)
#
#  Args:
#	action -
#
#  Environment:	 AWS_REGION _3_
#>
######################################################################
p6_lz_run_phase_3_management_account() {
  local action="$1"

  p6_h2 "Phase 3: Management"
  local audit_account_id=$(p6_lz_util_audit_account_id_get)

  p6_h3 "Phase 3: Management: Delegating CloudTrail"
  p6_aws_svc_cloudtrail_from_management_on $audit_account_id

  p6_h3 "Phase 3: Management: Delegating Config"
  p6_aws_svc_configservice_from_management_on $audit_account_id $AWS_REGION

  p6_h3 "Phase 3: Management: Delegating SecurityHub"
  p6_aws_svc_securityhub_from_management_on $audit_account_id

  # Piece of Shit -- do not use
  # p6_h3 "Phase 3: Management: Delegate Inspector"
  # p6_aws_svc_inspector_from_management_on $audit_account_id

  p6_return_void
}

######################################################################
#<
#
# Function: p6_lz_run_phase_3_logarchive_account(action)
#
#  Args:
#	action -
#
#  Environment:	 _3_
#>
######################################################################
p6_lz_run_phase_3_logarchive_account() {
  local action="$1"

  p6_h2 "Phase 3: Logarchive Stack"
  p6_awscdk_cli_execute $action p6-lz-logarchive-1

  p6_h3 "Phase 3: Logarchive Add Logarchive Bucket Name to Context"
  local logarchive_account_name=$(p6_lz_util_logarchive_account_name)
  p6_aws_svc_organizations_sts_run_as $logarchive_account_name p6_lz_util_cdk_context_add_logarchive_bucket $action

  p6_awscdk_cli_execute $action p6-lz-logarchive-2

  p6_return_void
}

